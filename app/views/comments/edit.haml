%section.textual
  %h1 Editing Comment
  = form_for @comment do |f|
    .field
      = f.label :body
      = f.text_area :body
      = render 'shared/field_errors', f: f, field: :body
    %fieldset
      %legend Status
      - Comment::VALID_STATUSES.each_with_index do |status, s|
        .field.radio
          = f.radio_button :status, status, id: "comment_status_#{s}", checked: status == f.object.status ? true : nil
          = f.label :status, status, for: "comment_status_#{s}"
    .actions
      = button_tag 'Save'
