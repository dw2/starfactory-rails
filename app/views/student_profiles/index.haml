%section
  .wrapper
    %h1 Student Profiles
    %table
      %thead
        %tr
          %th Name
          %th Email
          %th
      - if @student_profiles.total_pages > 1
        %tfoot
          %th{ colspan: 3 }= paginate @student_profiles
      %tbody
        - @student_profiles.each do |student_profile|
          %tr
            %td= link_to student_profile.name, student_profile
            %td= link_to student_profile.email, "mailto:#{student_profile.email}"
            %td.actions
              %div
                - if logged_in? && current_user.admin?
                  = link_to student_profile.name, edit_student_profile_url(student_profile), class: 'edit'
