.field
  = f.label :name
  = f.text_field :name
.field
  = f.label :description
  = f.text_area :description
%fieldset
  %legend Track
  - Track.all.each_with_index do |track, t|
    .field.radio
      = f.radio_button :track_id, track.id, id: "workshop_track_id_#{t}", checked: track.id == f.object.track_id ? true : nil
      = f.label :track_id, track.name, for: "workshop_track_id_#{t}"
%fieldset
  %legend Status
  - Workshop::VALID_STATUSES.each_with_index do |status, s|
    .field.radio
      = f.radio_button :status, status, id: "workshop_status_#{s}", checked: status == f.object.status ? true : nil
      = f.label :status, status, for: "workshop_status_#{s}"
