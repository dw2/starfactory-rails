.field
  = f.label :name
  = f.text_field :name
%fieldset
  %legend Tracks
  = f.collection_check_boxes :track_ids, Track.active, :id, :name do |c|
    .field.checkbox
      = c.check_box
      = c.label
.field
  = f.label :description
  = f.text_area :description
.field
  = f.label :status
  = f.select :status, Workshop::VALID_STATUSES
