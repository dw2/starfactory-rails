%section.workshop
  .wrapper
    = text_to_html @workshop.description
    %hr
    %dl
      - if @workshop.tracks.any?
        %dt Track
        - @workshop.tracks.each do |track|
          %dd= link_to track.name, track
      - if @workshop.instructor_profiles.any?
        %dt Instructor
        - @workshop.instructor_profiles.each do |instructor_profile|
          %dd= link_to instructor_profile.name, instructor_profile

= render 'shared/about'
