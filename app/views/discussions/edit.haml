%section.textual
  %h1 Editing Discussion
  = form_for @discussion do |f|
    = render 'fields', f: f
    %fieldset
      %legend Status
      - Discussion::VALID_STATUSES.each_with_index do |status, s|
        .field.radio
          = f.radio_button :status, status, id: "discussion_status_#{s}", checked: status == f.object.status ? true : nil
          = f.label :status, status, for: "discussion_status_#{s}"
    .actions
      = button_tag 'Save'
