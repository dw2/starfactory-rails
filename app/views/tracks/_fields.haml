.field
  = f.label :name
  = f.text_field :name
  = render 'shared/field_errors', f: f, field: :name
.field
  = f.label :description
  = f.text_area :description
  = render 'shared/field_errors', f: f, field: :description
%fieldset
  %legend Status
  - Track::VALID_STATUSES.each_with_index do |status, s|
    .field.radio
      = f.radio_button :status, status, id: "track_status_#{s}", checked: status == f.object.status ? true : nil
      = f.label :status, status, for: "track_status_#{s}"
.field
  = f.label :sort
  = f.number_field :sort, step: 1
